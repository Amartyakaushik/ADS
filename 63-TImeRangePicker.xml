<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimeRangePickerActivity">

    <nl.joery.timerangepicker.TimeRangePicker
        android:id="@+id/picker"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="324dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/Gray"
        app:trp_endTime="6:30"
        app:trp_startTime="22:00"
        app:trp_thumbIconEnd="@drawable/end_time"
        app:trp_thumbIconStart="@drawable/start_time"
        app:trp_thumbSizeActiveGrow="2"
        app:trp_thumbColor="@color/red_btn_bg_color"
        app:trp_clockFace="SAMSUNG"
        app:trp_clockLabelColor="@color/Blue"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
