<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirebaseFirestore"
    android:background="@drawable/my_bg">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/my_layout_bg"
        android:layout_marginTop="120dp"
        android:layout_marginHorizontal="23dp"
        android:paddingTop="20dp"
        android:elevation="5dp">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/logo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/suit"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Log In"
            android:textSize="35sp"
            android:textColor="#B3AFAF"
            android:layout_gravity="center"
            android:fontFamily="@font/kurale" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="It only takes 10 seconds :)"
            android:textSize="19sp"
            android:textColor="#B3AFAF"
            android:layout_gravity="center"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="19dp"
        android:layout_marginTop="12dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="22sp"
        android:textColor="#B3AFAF"
        android:fontFamily="@font/kurale"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/username_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:boxCornerRadiusBottomEnd="15dp"
        app:boxCornerRadiusBottomStart="15dp"
        app:boxCornerRadiusTopEnd="15dp"
        app:boxCornerRadiusTopStart="15dp"
        app:placeholderText="e.g  john11@gmail.com">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColorHint="@color/hintColor"
            android:textColor="@color/white"
            android:hint="What's your email address?"/>
    </com.google.android.material.textfield.TextInputLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="19dp"
        android:layout_marginTop="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="20sp"
        android:textColor="#B3AFAF"
        android:fontFamily="@font/kurale"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/pass_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusBottomStart="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:boxCornerRadiusTopStart="15dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/hintColor"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:hint="Choose your password." />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/tNc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I have read the Terms and Conditions"
            android:textColor="#DAD7D7"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/logInBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:padding="14dp"
        android:text="Log In"
        android:textSize="20sp"
        android:backgroundTint="#747F8397"
        android:layout_gravity="center_horizontal"/>

    </androidx.appcompat.widget.LinearLayoutCompat>







</FrameLayout>
