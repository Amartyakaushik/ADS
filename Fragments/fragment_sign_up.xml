<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.SIgnUp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/bg_background_auth"
            android:scaleType="fitXY"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_carrot_icon"
            android:layout_gravity="center"/>
    </FrameLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="12dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="25sp"
            android:fontFamily="@font/open_sans"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your credentials to continue"
            android:textSize="15sp"
            android:textColor="@color/label_color"
            android:layout_marginTop="8dp"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="17sp"
            android:layout_marginTop="16dp"
            android:textColor="@color/label_color"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="start"
            app:errorEnabled="false"
            app:hintAnimationEnabled="false"
            app:hintEnabled="true"
            app:placeholderText="e.g. John Smith">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etUserName"
                style="@style/Edit_Common"
                android:layout_width="match_parent"
                android:textSize="15sp"
                android:paddingStart="0dp"
                android:textColorHint="@color/black"
                android:paddingVertical="14dp"
                android:inputType="textEmailAddress"/>
        </com.google.android.material.textfield.TextInputLayout>


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="17dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/label_color"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutEmailInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textColorHint="@color/label_color"
            android:gravity="center">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEmail"
                style="@style/Edit_Common"
                android:layout_width="match_parent"
                android:textSize="18sp"
                android:paddingVertical="14dp"
                android:inputType="textEmailAddress"
                android:hint="john11@gmail.com" />
        </com.google.android.material.textfield.TextInputLayout>



        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="17sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/label_color"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutPasswordInput"
            style="@style/Edit_Common"
            android:layout_width="match_parent"
            android:gravity="center"
            android:background="@android:color/transparent"
            app:passwordToggleDrawable="@drawable/ic_password_icon"
            app:passwordToggleEnabled="true">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPasswordLogin"
                style="@style/Edit_Common"
                android:layout_width="match_parent"
                android:textColorHint="@color/label_color"
                android:paddingVertical="14dp"
                android:textSize="15sp"
                android:inputType="textPassword"/>


        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/termscondition"
            android:layout_marginTop="4dp"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="19sp"
            android:padding="14dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/app_color"
            android:gravity="center"/>

    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        android:gravity="top"
        android:layout_gravity="center_horizontal">


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:gravity="top"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:gravity="top"
            android:textColor="@color/app_color"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginStart="3dp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>
