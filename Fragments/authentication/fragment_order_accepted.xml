<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_background_auth"
    tools:context=".Fragments.OrderAccepted">



    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            app:srcCompat="@drawable/ic_order_accepted"
            android:layout_gravity="center"
            android:paddingEnd="30dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Order has been \n accepted"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:minLines="2"
            android:padding="2dp"
            android:fontFamily="@font/aldrich"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your item has been placed and is on \n it's way to being processed"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:fontFamily="@font/open_sans"
            android:minLines="2"
            android:gravity="center"/>
    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="18dp"
        android:layout_alignParentBottom="true">

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:backgroundTint="@color/Green"
            android:text="Track Order"
            android:textSize="16sp"
            android:padding="10dp"
            android:elevation="12dp"
            android:layout_marginHorizontal="45dp"
            app:cornerRadius="12dp"/>
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:text="Back to Home"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:padding="7dp"
            android:layout_marginHorizontal="45dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            app:cornerRadius="12dp"
            app:strokeColor="#2DFFFFFF"
            app:strokeWidth="1dp"
            android:elevation="12dp"
            android:backgroundTint="#7EFFFFFF"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</RelativeLayout>
